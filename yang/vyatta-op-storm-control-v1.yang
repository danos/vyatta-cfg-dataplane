		Commands for displaying storm control status & counters";

	revision 2019-01-11 {
		description "Change interface node to be an option";
	}
	revision 2018-07-13 {
		description "Initial version";
	}

	opd:augment /show:show {
		opd:command storm-control {
			opd:help "Show storm-control information";

			opd:command policies {
				opd:help "Show storm-control policies";
				opd:on-enter "vplane-op-storm-control --action show --object policies ";

				opd:option interface {
					opd:help "Show storm-control statistics on specified interface";
					opd:allowed "vyatta-interfaces.pl --show=dataplane";
					opd:on-enter "vplane-op-storm-control --action show --object policies --dev $5";
					type if-dp:dataplane-ifname;
				}
			}

			opd:command statistics {
				opd:help "Show storm-control statistics";
				opd:on-enter "vplane-op-storm-control --action show --object stats";

				opd:option interface {
					opd:help "Show storm-control statistics on specified interface";
					opd:allowed "vyatta-interfaces.pl --show=dataplane";
					opd:on-enter "vplane-op-storm-control --action show --object stats --dev $5";
					type if-dp:dataplane-ifname;
				}
			}
		}
	}

	opd:augment /clear:clear {
		opd:command storm-control {
			opd:help "Clear storm-control information";

			opd:command statistics {
				opd:help "Clear storm-control statistics";
				opd:on-enter "vplane-op-storm-control --action clear --object stats ";

				opd:option interface {
					opd:help "Clear storm-control statistics on specified interface";
					opd:allowed "vyatta-interfaces.pl --show=dataplane";
					opd:on-enter "vplane-op-storm-control --action clear --object stats --dev $5";
					type if-dp:dataplane-ifname;
				}
			}
		}
	}

}
