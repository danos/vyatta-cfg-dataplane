module vyatta-op-storm-control-v1 {
	namespace "urn:vyatta.com:mgmt:vyatta-op-storm-control:1";
	prefix vyatta-op-storm-control-v1;

	import vyatta-opd-extensions-v1 {
		prefix opd;
	}
	import vyatta-op-show-v1 {
		prefix show;
	}
	import vyatta-op-clear-v1 {
		prefix clear;
	}
	import vyatta-interfaces-dataplane-v1 {
		prefix if-dp;
	}

	organization "AT&T Inc.";
	contact
		"AT&T
		 Postal: 208 S. Akard Street
		         Dallas, TX 25202
		 Web: www.att.com";

	description
